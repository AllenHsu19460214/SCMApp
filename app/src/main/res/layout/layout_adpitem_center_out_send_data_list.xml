<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:id="@+id/item_cardView"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            card_view:cardBackgroundColor="#e9f4f4"
            card_view:cardElevation="5dp"
            card_view:cardMaxElevation="5dp"
            android:layout_margin="2dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:textStyle="bold"
                          android:textSize="17sp"
                          android:text="订单号: "/>
                <TextView android:id="@+id/tvOrderNumber"
                        android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:textSize="17sp"
                          tools:text="FOCEJS059201810250002-1"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/black"
                              android:textSize="16sp"
                              android:textStyle="bold"
                              android:text="备件编号 : "/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/black"
                              android:textSize="16sp"
                              android:id="@+id/tvSpareNumber"
                              tools:text="G  0020SM44D"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginStart="5dp"
                              android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/black"
                              android:textSize="16sp"
                              android:textStyle="bold"
                              android:text="计划箱数 : "/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textColor="@color/black"
                              android:textSize="16sp"
                              android:id="@+id/tvPlanBoxTotal"
                              tools:text="824"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <LinearLayout android:layout_weight="1"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/black"
                              android:textSize="16sp"
                              android:textStyle="bold"
                              android:text="扫码数量 : "/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:id="@+id/tvScanCount"
                            tools:text="0"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/llNoCodeCount"
                        android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="4"
                              android:layout_marginBottom="5dp"
                              android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/black"
                              android:textSize="16sp"
                              android:textStyle="bold"
                              android:text="无码数量 : "/>
                    <EditText android:enabled="false"
                            android:singleLine="true"
                            android:background="@color/darker_gray"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:id="@+id/etNoCodeCount"
                            android:text="0"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>