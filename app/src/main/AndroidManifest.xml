                android:windowSoftInputMode="adjustPan|stateHidden">
        </activity>
        <!-- CenterIn -->
        <activity android:name=".ui.activity.InModeAty">
        </activity>
        <activity android:name=".ui.activity.IntoCenterAty">
        </activity>
        <activity android:name=".ui.activity.InByTransferDocAty">
        </activity> <!-- Center -->
        <activity android:name=".ui.activity.SearchProductAty">
