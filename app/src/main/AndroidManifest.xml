        </activity>
        <activity android:name=".ui.activity.OutByDistributeDocReduceAty">
        </activity>
        <!-- developmentMode，debug:debugMode，test:testMode，pro:productionMode -->
        <meta-data
                android:name="DEV_MODEL"
                android:value="debug"/>
        <!-- MainActivity -->
        <activity android:name=".ui.activity.MainActivity">
        </activity>
        <!-- LoginActivity -->
        <activity
                android:name=".ui.activity.LoginActivity"
                android:theme="@style/AppTheme.intrusiveMood">
        </activity>
        <!-- SplashAty -->
        <activity
                android:name=".ui.activity.SplashAty"
                android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- CenterOut -->
        <activity android:name=".ui.activity.OutModeAty">
